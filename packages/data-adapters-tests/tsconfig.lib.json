{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "types": [
      "node",
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ],
    "paths": {
      "@lib": ["./src/lib/index.ts"],
      "@tests": ["./src/tests/index.ts"],
      "@types": ["./src/types/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "vite.config.mts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ],
  "references": [
    {
      "path": "../accounts/tsconfig.lib.json"
    },
    {
      "path": "../auth/tsconfig.lib.json"
    },
    {
      "path": "../bootstrap/tsconfig.lib.json"
    },
    {
      "path": "../domain/tsconfig.lib.json"
    },
    {
      "path": "../application-core/tsconfig.lib.json"
    }
  ]
}
