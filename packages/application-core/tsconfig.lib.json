{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "types": ["node"],
    "paths": {
      "@core": ["./src/core/index.ts"],
      "@types": ["./src/types/index.ts"],
      "@ports": ["./src/ports/index.ts"],
      "@errors": ["./src/errors/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../auth/tsconfig.lib.json"
    },
    {
      "path": "../serialiser/tsconfig.lib.json"
    },
    {
      "path": "../domain/tsconfig.lib.json"
    },
    {
      "path": "../bootstrap/tsconfig.lib.json"
    }
  ],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}
