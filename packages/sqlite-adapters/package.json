{
  "name": "@zero/sqlite-adapters",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.js",
      "default": "./src/index.js"
    },
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.13",
    "vitest-mock-extended": "catalog:",
    "vitest-when": "catalog:",
    "kysely-codegen": "0.19.0",
    "@zero/data-adapters-tests": "workspace:*"
  },
  "nx": {
    "targets": {
      "drop-migrations": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/sqlite-adapters",
          "command": "vite-node src/migrate/run-cli.ts drop-all --file 'test-db.sqlite'"
        }
      },
      "run-migrations": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/sqlite-adapters",
          "command": "vite-node src/migrate/run-cli.ts migrate --file 'test-db.sqlite'"
        }
      },
      "reload-migrations": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/sqlite-adapters",
          "command": "vite-node src/migrate/run-cli.ts drop-all --file 'test-db.sqlite' && vite-node src/migrate/run-cli.ts migrate --file 'test-db.sqlite'"
        }
      },
      "gen-types": {
        "executor": "nx:run-commands",
        "dependsOn": [
          "reload-migrations"
        ],
        "options": {
          "cwd": "packages/sqlite-adapters",
          "command": "kysely-codegen --out-file ./src/core/database.ts"
        }
      }
    }
  },
  "dependencies": {
    "@drizzle-team/brocli": "0.11.0",
    "@inversifyjs/strongly-typed": "catalog:",
    "@zero/accounts": "workspace:*",
    "@zero/application-core": "workspace:*",
    "@zero/auth": "workspace:*",
    "@zero/bootstrap": "workspace:*",
    "@zero/domain": "workspace:*",
    "@zero/kysely-shared": "workspace:*",
    "better-sqlite3": "12.5.0",
    "inversify": "catalog:",
    "kysely": "catalog:",
    "reflect-metadata": "catalog:",
    "zod": "catalog:"
  }
}
