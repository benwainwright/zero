{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@core": ["./src/core/index.ts"],
      "@user": ["./src/user/index.ts"],
      "@category": ["./src/category/index.ts"],
      "@budget": ["./src/budget/index.ts"],
      "@account": ["./src/account/index.ts"],
      "@transaction": ["./src/transaction/index.ts"],
      "@bank-connection": ["./src/bank-connection/index.ts"],
      "@user/*": ["./src/user/*"],
      "@role": ["./src/role/index.ts"],
      "@role/*": ["./src/role/*"],
      "@types": ["./src/types/index.ts"],
      "@permission": ["./src/permission/index.ts"]
    },
    "outDir": "./out-tsc/vitest",
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
, "../auth/src/core/grant.test.ts"  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}
