{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "paths": {
      "@core": ["./src/core/index.ts"],
      "@user": ["./src/user/index.ts"],
      "@category": ["./src/category/index.ts"],
      "@budget": ["./src/budget/index.ts"],
      "@account": ["./src/account/index.ts"],
      "@transaction": ["./src/transaction/index.ts"],
      "@bank-connection": ["./src/bank-connection/index.ts"],
      "@user/*": ["./src/user/*"],
      "@errors":  ["./src/errors/index.ts"],
      "@oauth-token": ["./src/oauth-token/index.ts"],
      "@role": ["./src/role/index.ts"],
      "@role/*": ["./src/role/*"],
      "@types": ["./src/types/index.ts"],
      "@permission": ["./src/permission/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "references": [],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}
