{
  "name": "@zero/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite-node src/start.ts"
  },
  "dependencies": {
    "@inversifyjs/strongly-typed": "catalog:",
    "@zero/application-core": "workspace:*",
    "@zero/auth": "workspace:*",
    "@zero/bootstrap": "workspace:*",
    "@zero/domain": "workspace:*",
    "@zero/node-adapters": "workspace:*",
    "@zero/sqlite-adapters": "workspace:*",
    "@zero/postgres-adapters": "workspace:*",
    "@zero/websocket-adapter": "workspace:*",
    "vite-plugin-node-polyfills": "0.24.0",
    "vite-plugin-static-copy": "3.1.4"
  },
  "devDependencies": {
    "vite-node": "5.2.0"
  },
  "nx": {
    "build:postgres": {
      "dependsOn": [
        {
          "target": "build",
          "params": "forward",
          "options": {
            "env": {
              "DATABASE": "postgres"
            }
          }
        }
      ]
    },
    "build:sqlite": {
      "dependsOn": [
        {
          "target": "build",
          "params": "forward",
          "options": {
            "env": {
              "DATABASE": "sqlite"
            }
          }
        }
      ]
    },
    "targets": {
      "dev": {
        "continuous": true,
        "executor": "nx:run-commands",
        "options": {
          "cwd": "apps/backend",
          "commands": [
            "vite-node  src/start.ts"
          ]
        }
      }
    }
  }
}
