{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "types": ["@react-router/node", "vite/client", "node"],
    "target": "ES2022",
    "forceConsistentCasingInFileNames": true,
    "rootDir": "app",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "paths": {
      "@routes": ["./app/routes.ts"],
      "@utils": ["./app/utils/index.ts"],
      "@middleware": ["./app/middleware/index.ts"],
      "@config": ["./app/config/index.ts"],
      "@data": ["./app/data/index.ts"],
      "@errors": ["./app/errors/index.ts"],
      "@components": ["./app/components/index.ts"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.js",
    "app/**/*.jsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "tests/**/*.spec.ts",
    "tests/**/*.test.ts",
    "tests/**/*.spec.tsx",
    "tests/**/*.test.tsx",
    "tests/**/*.spec.js",
    "tests/**/*.test.js",
    "tests/**/*.spec.jsx",
    "tests/**/*.test.jsx",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "references": [
    {
      "path": "../../packages/serialiser/tsconfig.lib.json"
    },
    {
      "path": "../../packages/react-api/tsconfig.lib.json"
    },
    {
      "path": "../../packages/websocket-adapter/tsconfig.lib.json"
    },
    {
      "path": "../../packages/auth/tsconfig.lib.json"
    },
    {
      "path": "../../packages/application-core/tsconfig.lib.json"
    },
    {
      "path": "../../packages/domain/tsconfig.lib.json"
    }
  ]
}
