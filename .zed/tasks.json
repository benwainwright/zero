// Project tasks configuration. See https://zed.dev/docs/tasks for documentation.
//
// Example:
[
  {
    "label": "vitest4 file test",
    "command": "$ZED_CUSTOM_TYPESCRIPT_RUNNER",
    "args": [
      "exec",
      "--",
      "vitest",
      "run",
      "--no-file-parallelism",
      "$ZED_FILE"
    ],
    "cwd": "$ZED_CUSTOM_TYPESCRIPT_VITEST_PACKAGE_PATH"
  },
  {
    "label": "vitest4 test $ZED_SYMBOL",
    "command": "$ZED_CUSTOM_TYPESCRIPT_RUNNER",
    "args": [
      "exec",
      "--",
      "vitest",
      "run",
      "--no-file-parallelism",
      "--testNamePattern",
      "\"$ZED_CUSTOM_TYPESCRIPT_VITEST_TEST_NAME\"",
      "$ZED_FILE"
    ],
    "tags": ["ts-test", "js-test", "tsx-test"],
    "cwd": "$ZED_CUSTOM_TYPESCRIPT_VITEST_PACKAGE_PATH"
  }
]
